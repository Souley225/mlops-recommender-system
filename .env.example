# Configuration de l'environnement MLOps Recommender System
# Copiez ce fichier vers .env et modifiez les valeurs selon votre configuration

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=mlops-recommender

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# UI Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Model Configuration
MODEL_NAME=als_recommender
MODEL_STAGE=Production

# Data Configuration
DATA_DIR=./data
MODELS_DIR=./models

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Reproducibility
RANDOM_SEED=42
